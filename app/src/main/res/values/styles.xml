<resources>

	<style name="ToolbarStyle">
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="CardViewStyle">
		<item name="cardCornerRadius">@dimen/card_corner_radius</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="cardElevation">@dimen/elevation_4</item>
		<item name="cardBackgroundColor">?colorSurface</item>
	</style>

	<style name="CardViewStyle.PosterCardViewStyle">
		<item name="android:layout_marginStart">@dimen/spacing_16</item>
		<item name="android:layout_marginEnd">@dimen/spacing_16</item>
	</style>

	<style name="PosterItemTitleContainerStyle">
		<item name="android:background">?titleContainerColorPoster</item>
	</style>

	<style name="PosterItemTitleStyle">
		<item name="android:layout_margin">@dimen/spacing_8</item>
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">2</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">?colorOnSecondary</item>
	</style>

	<style name="GenreItemTitleStyle">
		<item name="android:textColor">?colorOnSurface</item>
		<item name="android:padding">@dimen/spacing_8</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="TitleItemStyle">
		<item name="android:background">?colorSurface</item>
		<item name="android:layout_marginTop">@dimen/spacing_4</item>
		<item name="android:layout_marginBottom">@dimen/spacing_4</item>
	</style>

	<style name="TitleItemTextViewStyle">
		<item name="android:textColor">?colorOnSurface</item>
		<item name="android:layout_margin">@dimen/spacing_8</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="FilmDetailOriginalTitleStyle">
		<item name="android:textColor">?colorOnSurface</item>
		<item name="android:layout_marginStart">@dimen/spacing_24</item>
	</style>

	<style name="FilmDetailSubtitleStyle">
		<item name="android:textColor">?colorOnSurface</item>
		<item name="android:layout_marginStart">@dimen/spacing_24</item>
		<item name="android:layout_marginTop">@dimen/spacing_16</item>
	</style>

	<style name="FilmDetailDescriptionStyle">
		<item name="android:textColor">?colorOnSurface</item>
		<item name="android:layout_marginBottom">@dimen/spacing_16</item>
		<item name="android:layout_marginTop">@dimen/spacing_32</item>
	</style>
</resources>